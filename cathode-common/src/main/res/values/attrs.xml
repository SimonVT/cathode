<resources>

  <declare-styleable name="AspectRatioView">
    <attr format="enum" name="dominantMeasurement">
      <enum name="height" value="0"/>
      <enum name="width" value="1"/>
    </attr>

    <attr format="float" name="aspectRatio"/>
  </declare-styleable>

  <declare-styleable name="MaxSizeLinearLayout">
    <attr format="dimension" name="maxWidth"/>
    <attr format="dimension" name="maxHeight"/>
  </declare-styleable>

  <attr format="reference" name="circularProgressIndicatorStyle"/>

  <declare-styleable name="CircularProgressIndicator">
    <attr format="dimension" name="textMargin"/>
    <attr format="color" name="textColor"/>
    <attr format="dimension" name="textSize"/>
    <attr format="color" name="textBackgroundColor"/>
    <attr format="dimension" name="circleStrokeWidth"/>
    <attr format="float" name="maxValue"/>
    <attr format="color" name="circleColor"/>
    <attr format="color" name="circleBackgroundColor"/>
  </declare-styleable>

  <declare-styleable name="InsetsFrameLayout">
    <attr format="color" name="insetsColor"/>
  </declare-styleable>

  <declare-styleable name="AppBarRelativeLayout">
    <attr name="expandedTitleMargin"/>
    <attr name="expandedTitleMarginStart"/>
    <attr name="expandedTitleMarginEnd"/>
    <attr name="expandedTitleMarginTop"/>
    <attr name="expandedTitleMarginBottom"/>

    <attr name="contentScrim"/>
    <attr name="statusBarScrim"/>

    <attr name="expandedTitleTextAppearance"/>
    <attr name="collapsedTitleTextAppearance"/>

    <attr format="reference" name="contentTopViewId"/>
  </declare-styleable>

  <declare-styleable name="AppBar_LayoutParams">
    <attr name="layout_scrollMode">
      <enum name="none" value="0"/>
      <enum name="pin" value="1"/>
      <enum name="parallex" value="2"/>
    </attr>

    <attr format="float" name="layout_parallexMultiplier"/>
  </declare-styleable>

  <attr format="reference" name="remoteImageViewStyle"/>
  <declare-styleable name="RemoteImageView">
    <attr format="reference" name="placeholder"/>
  </declare-styleable>
</resources>
