<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    tools:background="#FF222222"
    tools:ignore="HardcodedText">

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:text="App"
      style="@style/DebugDrawerTitle"/>

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="Start page"
      style="@style/DebugSpinnerLabelStyle"/>

  <Spinner
      android:id="@+id/debug_startPage"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"/>

  <TextView
      android:id="@+id/debug_recreateActivity"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Recreate activity"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:text="Crouton"
      style="@style/DebugDrawerTitle"/>

  <TextView
      android:id="@+id/debug_requestFailedEvent"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="RequestFailedEvent"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:text="Authorization"
      style="@style/DebugDrawerTitle"/>

  <TextView
      android:id="@+id/debug_authFailedEvent"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="AuthFailedEvent"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_removeAccessToken"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Remove access token"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_removeRefreshToken"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Remove refresh token"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_invalidateAccessToken"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Invalidate access token"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_invalidateRefreshToken"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Invalidate refresh token"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:text="Retrofit"
      style="@style/DebugDrawerTitle"/>

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="Log level"
      style="@style/DebugSpinnerLabelStyle"/>

  <Spinner
      android:id="@+id/debug_logLevel"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"/>

  <TextView
      android:layout_gravity="start|center_vertical"
      android:text="Response code"
      style="@style/DebugSpinnerLabelStyle"/>

  <Spinner
      android:id="@+id/debug_networkStatusCode"
      android:layout_width="0dp"
      android:layout_gravity="start|center_vertical|fill_horizontal"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:text="Synchronization"
      style="@style/DebugDrawerTitle"/>

  <TextView
      android:id="@+id/debug_syncConfiguration"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Sync configuration"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_initialSync"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Perform initial sync"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_forceUpdate"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Force update"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_updatedLastDay"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Sync updated last day"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_syncWatching"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Sync watching"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_syncLists"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Sync lists"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:text="Job queue"
      style="@style/DebugDrawerTitle"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="1"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Auth service"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_authJobServiceStatus"
      android:layout_width="0dp"
      android:layout_columnSpan="1"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Stopped"
      style="@style/DebugDrawerValue"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="1"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Job service"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_jobServiceStatus"
      android:layout_width="0dp"
      android:layout_columnSpan="1"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Stopped"
      style="@style/DebugDrawerValue"/>

  <TextView
      android:layout_width="0dp"
      android:layout_columnSpan="1"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Job count"
      style="@style/DebugDrawerItem"/>

  <TextView
      android:id="@+id/debug_jobCount"
      android:layout_width="0dp"
      android:layout_columnSpan="1"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      tools:text="10"
      style="@style/DebugDrawerValue"/>

  <TextView
      android:id="@+id/debug_startJobService"
      android:layout_width="0dp"
      android:layout_columnSpan="2"
      android:layout_gravity="start|fill_horizontal"
      android:textAllCaps="false"
      android:text="Start JobService"
      style="@style/DebugDrawerItem"/>
</GridLayout>
