<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episodes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/detailContentPadding"
    android:paddingStart="@dimen/detailContentPadding"
    android:visibility="gone"
    tools:visibility="visible">

  <FrameLayout
      android:id="@+id/toWatch"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_weight="1"
      android:background="@drawable/card_rounded"
      android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:text="@string/to_watch"
          style="@style/Card.Title"/>

      <include
          layout="@layout/show_info_episode"/>
    </LinearLayout>

    <net.simonvt.cathode.common.widget.OverflowView
        android:id="@+id/episodeOverflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        tools:ignore="DuplicateIds,InconsistentLayout"/>
  </FrameLayout>

  <FrameLayout
      android:id="@+id/lastWatched"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_weight="1"
      android:background="@drawable/card_rounded"
      android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:text="@string/last_watched"
          style="@style/Card.Title"/>

      <include
          layout="@layout/show_info_episode"/>
    </LinearLayout>

    <net.simonvt.cathode.common.widget.OverflowView
        android:id="@+id/episodeOverflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        tools:ignore="DuplicateIds,InconsistentLayout"/>
  </FrameLayout>

  <FrameLayout
      android:id="@+id/toCollect"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_weight="1"
      android:background="@drawable/card_rounded"
      android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:text="@string/to_collect"
          style="@style/Card.Title"/>

      <include
          layout="@layout/show_info_episode"/>
    </LinearLayout>

    <net.simonvt.cathode.common.widget.OverflowView
        android:id="@+id/episodeOverflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        tools:ignore="DuplicateIds,InconsistentLayout"/>
  </FrameLayout>

  <FrameLayout
      android:id="@+id/lastCollected"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@drawable/card_rounded"
      android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:text="@string/last_collected"
          style="@style/Card.Title"/>

      <include
          layout="@layout/show_info_episode"/>
    </LinearLayout>

    <net.simonvt.cathode.common.widget.OverflowView
        android:id="@+id/episodeOverflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        tools:ignore="DuplicateIds,InconsistentLayout"/>
  </FrameLayout>
</LinearLayout>
