<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episodes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/detailContentPadding"
    android:layout_marginRight="@dimen/detailContentPadding"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/toWatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/to_watch"
            style="@style/Card.Title"/>

        <include
            layout="@layout/show_info_episode"/>
      </LinearLayout>

      <net.simonvt.cathode.common.widget.OverflowView
          android:id="@+id/episodeOverflow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="8dp"
          android:layout_gravity="right"
          tools:ignore="DuplicateIds,InconsistentLayout"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lastWatched"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="InconsistentLayout">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/last_watched"
            style="@style/Card.Title"/>

        <include
            layout="@layout/show_info_episode"/>
      </LinearLayout>

      <net.simonvt.cathode.common.widget.OverflowView
          android:id="@+id/episodeOverflow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="8dp"
          android:layout_gravity="right"
          tools:ignore="DuplicateIds,InconsistentLayout"/>
    </androidx.cardview.widget.CardView>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:baselineAligned="false"
      android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/toCollect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/to_collect"
            style="@style/Card.Title"/>

        <include
            layout="@layout/show_info_episode"/>
      </LinearLayout>

      <net.simonvt.cathode.common.widget.OverflowView
          android:id="@+id/episodeOverflow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="8dp"
          android:layout_gravity="right"
          tools:ignore="DuplicateIds,InconsistentLayout"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lastCollected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="InconsistentLayout">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/last_collected"
            style="@style/Card.Title"/>

        <include
            layout="@layout/show_info_episode"/>
      </LinearLayout>

      <net.simonvt.cathode.common.widget.OverflowView
          android:id="@+id/episodeOverflow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="8dp"
          android:layout_gravity="right"
          tools:ignore="DuplicateIds,InconsistentLayout"/>
    </androidx.cardview.widget.CardView>
  </LinearLayout>
</LinearLayout>
