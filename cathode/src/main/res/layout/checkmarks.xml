<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkmarks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/detailContentPadding"
    android:layout_marginStart="@dimen/detailContentPadding"
    android:layout_marginTop="4dp"
    android:animateLayoutChanges="true"
    android:minHeight="4dp"
    android:orientation="horizontal">

  <TextView
      android:id="@+id/isWatched"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:drawableStart="@drawable/ic_checkmark_watched"
      android:text="@string/checkmark_watched"
      android:textColor="@color/watchedColor"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Widget.CheckMark"/>

  <TextView
      android:id="@+id/inCollection"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:drawableStart="@drawable/ic_checkmark_collection"
      android:text="@string/checkmark_collection"
      android:textColor="@color/collectedColor"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Widget.CheckMark"/>

  <TextView
      android:id="@+id/inWatchlist"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_checkmark_watchlist"
      android:text="@string/checkmark_watchlist"
      android:textColor="@color/watchlistColor"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Widget.CheckMark"/>
</LinearLayout>
