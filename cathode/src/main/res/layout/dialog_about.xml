<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp">

  <ImageView android:id="@+id/logo"
      android:layout_width="fill_parent"
      android:layout_height="128dp"
      android:src="@drawable/ic_launcher"
      android:scaleType="fitCenter"/>

  <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/app_name"
      style="@style/AboutText.Header"/>

  <TextView android:id="@+id/version"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="1.0.0"
      style="@style/AboutText.Clickable"/>

  <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/developer"
      style="@style/AboutText.Header"/>

  <TextView android:id="@+id/gplus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="+Simon Vig Therkildsen"
      style="@style/AboutText.Clickable"/>

  <TextView android:id="@+id/github"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="\@SimonVT"
      style="@style/AboutText.Clickable"/>

  <TextView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/other"
      style="@style/AboutText.Header"/>

  <TextView android:id="@+id/licenses"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/licenses"
      style="@style/AboutText.Clickable"/>

  <TextView android:id="@+id/source"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/source_code"
      style="@style/AboutText.Clickable"/>

</LinearLayout>
