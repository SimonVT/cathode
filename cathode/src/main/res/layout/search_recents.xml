<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="8dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_recent"
        style="@style/SearchRecentTitle"/>

    <LinearLayout
        android:id="@+id/queries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/search_divider"
        android:orientation="vertical"
        android:showDividers="middle">

      <TextView
          android:id="@+id/query1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="Query 1"
          style="@style/SearchRecentQuery"/>

      <TextView
          android:id="@+id/query2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="Query 2"
          style="@style/SearchRecentQuery"/>

      <TextView
          android:id="@+id/query3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="Query 3"
          style="@style/SearchRecentQuery"/>
    </LinearLayout>
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>
