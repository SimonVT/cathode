<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="84dp"
      android:minHeight="64dp">

    <net.simonvt.cathode.common.widget.RemoteImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FF00FF00"
        app:aspectRatio="0.68"
        app:dominantMeasurement="height"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_toLeftOf="@id/rating"
        android:layout_toRightOf="@id/poster"
        android:orientation="vertical"
        android:paddingBottom="2dp">

      <TextView
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="Title"
          style="@style/ListRowTitle"/>

      <TextView
          android:id="@+id/overview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="This is a description of the search result. It can be long. And multiline. Lots of lots of lines. Even more lines"
          style="@style/ListRowCaption"/>
    </LinearLayout>

    <net.simonvt.cathode.common.widget.CircularProgressIndicator
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:textMargin="10dp"/>
  </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
