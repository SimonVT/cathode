<resources>

  <style name="Widget" parent="android:Widget.Material"/>

  <style name="Crouton">
    <item name="android:gravity">center</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverseNoDisable</item>
  </style>

  <style name="ListRowTitle">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ListRowCaption">
    <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    <item name="android:fontFamily">sans-light</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">3</item>
  </style>

  <style name="Widget.InfoTitle">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:paddingStart">@dimen/detailContentPadding</item>
    <item name="android:paddingEnd">@dimen/detailContentPadding</item>
  </style>

  <style name="Widget.InfoTitle.ReducedPadding">
    <item name="android:paddingBottom">4dp</item>
  </style>

  <style name="Widget.InfoTitle.ReducedPadding.ReducedMargin">
    <item name="android:layout_marginTop">0dp</item>
  </style>

  <style name="Widget.InfoText">
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    <item name="android:paddingStart">@dimen/detailContentPadding</item>
    <item name="android:paddingEnd">@dimen/detailContentPadding</item>
  </style>

  <style name="InfoLink">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    <item name="android:paddingStart">@dimen/detailContentPadding</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingEnd">@dimen/detailContentPadding</item>
    <!--item name="android:drawableLeft">@drawable/ic_link_black_24dp</item-->
    <item name="android:drawablePadding">@dimen/detailContentPadding</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="Widget.CheckMark">
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    <item name="android:textSize">10sp</item>
    <item name="android:drawablePadding">4dp</item>
  </style>

  <style name="AboutText">
    <item name="android:gravity">center</item>
  </style>

  <style name="AboutText.Header">
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
  </style>

  <style name="AboutText.Clickable">
    <item name="android:textAppearance">?attr/textAppearanceButton</item>
    <item name="android:textColor">?attr/colorPrimary</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="Widget.UpcomingHeader">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    <item name="android:layout_marginBottom">4dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="Card"/>

  <style name="Card.Title">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
  </style>

  <style name="Card.HeaderParent">
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingStart">@dimen/detailContentPadding</item>
    <item name="android:paddingEnd">@dimen/detailContentPadding</item>
    <item name="android:background">?attr/selectableItemBackground</item>
  </style>

  <style name="Card.More">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="Person"/>

  <style name="Person.Name">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
  </style>

  <style name="Person.Job">
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
  </style>

  <style name="Person.Header">
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:paddingStart">8dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="RemoteImageViewStyle">
    <item name="placeholder">@drawable/placeholder</item>
  </style>

  <style name="StatsText">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textAppearance">?attr/textAppearanceCaption</item>
  </style>

  <style name="StatsValue">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:gravity">center</item>
    <item name="android:textAppearance">?attr/textAppearanceBody1</item>
  </style>

  <style name="StatsDivider">
    <item name="android:background">@color/divider</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">2dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
  </style>

  <style name="SearchRecentTitle">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginBottom">4dp</item>
  </style>

  <style name="SearchRecentQuery">
    <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingEnd">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:drawablePadding">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="SearchErrorView">
    <item name="android:background">@android:color/holo_red_dark</item>
    <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingBottom">4dp</item>
  </style>

</resources>
