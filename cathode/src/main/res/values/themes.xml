<resources>

  <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:windowBackground">@color/grey_900</item>
    <item name="android:statusBarColor">@color/grey_900</item>
  </style>

  <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>

    <!-- Material colors -->
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
    <item name="colorOnPrimary">@color/primaryTextColor</item>
    <item name="colorSecondary">@color/secondaryColor</item>
    <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    <item name="colorOnSecondary">@color/secondaryTextColor</item>
    <item name="colorAccent">@color/secondaryColor</item>

    <!-- Material text appearances -->
    <item name="textAppearanceSubtitle1">@style/TextAppearance.Cathode.Subtitle1</item>
    <item name="textAppearanceSubtitle2">@style/TextAppearance.Cathode.Subtitle2</item>
    <item name="textAppearanceBody2">@style/TextAppearance.Cathode.Body2</item>
    <item name="textAppearanceCaption">@style/TextAppearance.Cathode.Caption</item>

    <!-- Component styles -->
    <item name="circularProgressIndicatorStyle">@style/CircularProgressIndicator</item>
    <item name="remoteImageViewStyle">@style/RemoteImageViewStyle</item>
  </style>

  <style name="Theme" parent="BaseTheme">
  </style>

  <style name="Theme.Oauth">
    <item name="android:statusBarColor">@color/grey_900</item>
  </style>

  <style name="Theme.Login">
    <item name="android:statusBarColor">@color/grey_900</item>
  </style>

  <style name="SettingsTheme" parent="BaseTheme">
    <item name="android:windowBackground">@color/windowBackground</item>
  </style>

</resources>
