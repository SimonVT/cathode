<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <ListPreference
      android:key="startPage"
      android:title="@string/preference_startpage"
      android:dialogTitle="@string/preference_startpage"
      android:entries="@array/setting_startpage"
      android:entryValues="@array/setting_startpage_values"
      android:defaultValue="@string/settings_startpage_default"/>

  <SwitchPreference
      android:key="calendarSync"
      android:title="@string/preference_calendar"/>

  <Preference
      android:key="calendarColor"
      android:title="@string/preference_calendar_color"/>

  <Preference
      android:key="notifications"
      android:title="@string/preference_notifications"/>

  <Preference
      android:key="hiddenItems"
      android:title="@string/preference_hidden_items"/>

  <PreferenceCategory
      android:title="@string/preference_upcoming"/>

  <Preference
      android:key="upcomingTime"
      android:title="@string/preference_upcoming_time"
      android:summary="@string/preference_upcoming_time_summary"/>

  <PreferenceCategory
      android:title="@string/preference_shows"/>

  <CheckBoxPreference
      android:key="showsAvoidSpoilers"
      android:title="@string/preference_shows_avoid_spoilers"
      android:summary="@string/preference_shows_avoid_spoilers_sum"/>

  <Preference
      android:key="showsOffset"
      android:title="@string/preference_shows_offset"
      android:summary="@string/preference_shows_offset_sum"/>

  <PreferenceCategory
      android:title="@string/preference_trakt"/>

  <Preference
      android:key="traktLink"
      android:title="@string/preference_trakt_link"
      android:summary="@string/preference_trakt_link_sum"/>

  <Preference
      android:key="traktUnlink"
      android:title="@string/preference_trakt_unlink"/>

  <PreferenceCategory
      android:title="@string/preference_other"/>

  <Preference
      android:key="about"
      android:title="@string/preference_about"/>
</PreferenceScreen>